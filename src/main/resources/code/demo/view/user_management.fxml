<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.demo.controller.UserManagementController">
    <left>
        <VBox spacing="8" styleClass="sidebar" prefWidth="200">
            <children>
                <Label text="Dashboard" onMouseClicked="#goDashboard" styleClass="nav-item" />
                <Label text="Books" onMouseClicked="#goBooks" styleClass="nav-item" />
                <Label text="Users" onMouseClicked="#goUsers" styleClass="nav-item active" />
                <Label text="Authors" onMouseClicked="#goAuthors" styleClass="nav-item" />
                <Label text="Settings" onMouseClicked="#goSettings" styleClass="nav-item" />
                <Label text="About" onMouseClicked="#goAbout" styleClass="nav-item" />
            </children>
            <padding><Insets top="16" left="12" right="12" bottom="16"/></padding>
        </VBox>
    </left>
    <center>
        <VBox spacing="12" styleClass="content">
            <children>
                <HBox spacing="8">
                    <children>
                        <Button fx:id="btnAdd" text="Add New User" onAction="#onAdd" />
                        <Button fx:id="btnEditRole" text="Edit Role" onAction="#onEditRole" />
                        <Button fx:id="btnDelete" text="Delete" onAction="#onDelete" />
                    </children>
                </HBox>
                <TableView fx:id="table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="240" />
                        <TableColumn fx:id="colRole" text="Role" prefWidth="120" />
                    </columns>
                </TableView>
            </children>
            <padding><Insets top="16" left="16" right="16" bottom="16"/></padding>
        </VBox>
    </center>
</BorderPane>
